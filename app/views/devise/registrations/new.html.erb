<h2 class="ui center aligned large header">
  Welcome iArtGallery  
</h2>
<h4 class="ui center aligned medium icon header">
  <i class="circular  power off tiny icon"></i>
  Sign up to continue
</h4>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="ui one column stackable center aligned page grid">
  <div class="column forty wide">
<div class="ui placeholder segment" id="mouse">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <div class="field">
          <%= f.label :email %>

          <div class="ui left icon input">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email" %>          
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <div class="ui left icon input">
            <%= f.password_field :password, autocomplete: "new-password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %>
          <div class="ui left icon input">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        
        <%= f.submit "Sign up", class:"ui fluid black submit button" %>

      </div>
    </div>
    <div class="middle aligned column">
      <%= link_to  new_user_session_path  do %>
      <div class="ui big button">
        <i class="signup black icon"></i>
          Log In
      </div>
      <% end %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
<% end %>
</div>
</div>