<h2 class="ui center aligned icon header" style="margin-top: 6rem">
  <i class=" orange shopping cart icon"></i>
  Your Shopping Cart
</h2>
<div class="ui container">
  <table class="ui very basic  celled table" >
    <thead>
    <tr>
      <th>Products</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    </thead>
    <tbody>
    <%= render(@cart.line_items) %>
    </tbody>
    <tfoot class="full-width">
    <tr>
      <th></th>
      <th colspan="4">
        <% session[:amount] = @cart.total_price %>
        <%  if user_signed_in? %>
            <%= link_to  :controller => "gallery",:action => "checkout" do %>
              <div class="ui right floated small primary labeled icon button">
                    <i class="rupee sign icon"></i>
                    <%= number_to_currency(@cart.total_price) %>
              </div>
            <% end %>
          <%else  %>
            <%= link_to  new_user_session_path  do %>
              <div class="ui right floated small primary labeled icon button">
                <i class="rupee sign icon"></i>
                <%= number_to_currency(@cart.total_price) %>
              </div>
            <% end %>
          <%end  %>
        <%= link_to  cart_path, :method => :delete do %>
            <div class="ui red small button">
              Empty Cart
            </div>
        <% end %>

      </th>
    </tr>
    </tfoot>
  </table>

</div>
